@model IEnumerable<Product>
<!-- This is Card Asside Panel Lets Go -->
<div class="right_asside">
    <div class="cover_card"></div>
    <div class="asside_card">
        <div class="container pr-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h4>YOUR CART</h4>
                        <span class="close"><i class="fas fa-times"></i></span>
                    </div>


                </div>
            </div>
            <div class="asside_product">

                <partial name="_PartialAssideCard" />

                @* <partial name="" />*@
               
                <div class="row">
                    <div class="col-md-12">
                        <div class="total">
                            @{
                                double total = 0;
                                foreach (var item in Model)
                                {
                                    double regprice = 0;

                                    if (item.DiscountProduct != 0)
                                    {
                                        regprice = item.Price - item.Price * item.DiscountProduct / 100;

                                    }
                                    else
                                    {
                                        regprice = item.Price;
                                    }

                                    total += regprice;
                                }
                            }
                            <h3>@total</h3>
                            @*<ul>
                        <li> <a href="#"> VIEW CART </a> </li>
                        <li> <a href="#"> CHECK OUT </a> </li>
                    </ul>*@


                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="banner_img">
                        <img src="~/img/shopping/CompleteShallowFlyingsquirrel-size_restricted.gif">
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>