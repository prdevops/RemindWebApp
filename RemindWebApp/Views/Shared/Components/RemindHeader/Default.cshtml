@model IEnumerable<Product>
<header>
    <section id="head">
        <div class="container mb-5">

            <div class="row mt-3 mb-3 head">
                <div class="col-lg-1 col-md-2">
                    <img src="~/img/register_icon/logo.png">
                </div>

                <div class="col-lg-5 col-md-10">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding-right:0!important">

                        <a class="navbar-brand" href="#">   </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>

                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Mehsullar
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="Product" asp-action="Index">Mehsullar</a>
                                        <a class="dropdown-item" asp-controller="Product" asp-action="SingleProduct">Mehsul</a>
                                        <a class="dropdown-item" asp-controller="Card" asp-action="Checkout">Card</a>

                                    </div>
                                </li>


                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Blog
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-controller="Blog" asp-action="Index">Blog</a>
                                        <a class="dropdown-item" asp-controller="BlogNews" asp-action="Index">Məlumat</a>

                                    </div>
                                </li>

                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact<span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" asp-controller="About" asp-action="Index">Haqqımızda <span class="sr-only">(current)</span></a>
                                </li>

                            </ul>

                        </div>
                    </nav>
                </div>
                <div class="col-lg-2 col-md-2">
                    <ul style="list-style-type:none; position:relative">
                        <li>
                            <input type="text" autocomplete="off" id="search" class="form-control" placeholder="search" style="width:165px; height:30px!important" />
                            <ul id="search_list" class="dropdown-menu" aria-labelledby="navbarDropdown" style="list-style-type:none">

                                <li class="dropdown-submenu">
                                    <a class="dropdown-item" href="#">
                                        Action
                                    </a>

                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4">
                    <div class="tinfo_right">
                        <ul id="ule">
                            <li><a href="#"><i class="fab fa-facebook-f true"> </i> </a> </li>
                            <li><a href="#"><i class="fab fa-twitter true"></i> </a></li>
                            <li><a href="#"><i class="fab fa-google-plus-g true"> </i> </a></li>
                            <li><a href="#"><i class="fab fa-linkedin-in true"> </i></a></li>

                        </ul>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4">
                    <div class="shop_like"><i class="fas fa-heart"></i></div>
                    <div class="shop_basket assidecard"><i class="fas fa-shopping-cart"></i></div>


                    <div class="pos">
                        <img src="~/img/accaunt/my-account.png" class="accaunt_icon">
                        <ul class="accaunt_ul">
                            @{
                                if (User.Identity.IsAuthenticated)
                                {
                                    <li class="first_li"><a asp-controller="accaunt" asp-action="login">@User.Identity.Name</a></li>
                                    <li class="second_li"><a asp-controller="accaunt" asp-action="Logout">Logout</a></li>
                                }
                                else
                                {
                                    <li class="first_li"><a asp-controller="accaunt" asp-action="login">Login</a></li>
                                    <li class="second_li"><a asp-controller="accaunt" asp-action="register">Register</a></li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </section>
</header>
