@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/RemindWebApp/Views/Shared/_AdminLayout.cshtml";
}

@section datatablecss{
    <link rel="stylesheet" type="text/css" href="~/admin/assets/extra-libs/multicheck/multicheck.css">
    <link href="~/admin/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css">
    <link href="~/admin/assets/extra-libs/DataTables/datatables.css" rel="stylesheet" />
}
<div class="container-fluid">

    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">  <a asp-action="Create" class="btn btn-primary">Create</a> </h5>
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered" >
                            <thead>
                                <tr>
                                   <th>Idarəetmə</th>
                                    <th>Kateqoriya</th>
                                    <th>Marka</th>
                                    <th>Adı</th>                                
                                    <th>Qiymət</th>
                                    <th>Sayı</th>
                                    <th>Endirim</th>
                                    <th>Kompaniya</th>
                                  

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>

                                            <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success mb-2" style="width:40px"><i class="fas fa-eye"></i></a>
                                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning mb-2" style="width:40px"> <i class="far fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mb-2" style="width:40px"><i class="far fa-trash-alt"></i></a>

                                        </td>
                                        <td>@product.CategoryMarka.Category.Name</td>
                                        <td>@product.CategoryMarka.Marka.Name</td>
                                        <td>@product.Name</td>
                                        <td>$@product.Price</td>
                                        <td>@product.Count</td>
                                        <td>@product.DiscountProduct</td>
                                        <td>@product.ProductDedline</td>

                                    </tr>
                                }



                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Idarəetmə</th>
                                    <th>Kateqoriya</th>
                                    <th>Marka</th>
                                    <th>Adı</th>                      
                                    <th>Qiymət</th>
                                    <th>Sayı</th>
                                    <th>Endirim</th>
                                    <th>Kompaniya</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section datatable{
    <script src="~/admin/assets/extra-libs/multicheck/datatable-checkbox-init.js"></script>
    <script src="~/admin/assets/extra-libs/multicheck/jquery.multicheck.js"></script>
    <script src="~/admin/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        /****************************************
                     *       Basic Table                   *
                     ****************************************/
        $('#zero_config').DataTable();</script>
}


