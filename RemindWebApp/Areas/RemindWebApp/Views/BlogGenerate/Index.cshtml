@model IEnumerable<Blog>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Areas/RemindWebApp/Views/Shared/_AdminLayout.cshtml";
    }

    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">  <a asp-action="Create" class="btn btn-primary">Create</a> </h5>
            <div class="table-responsive">
                <table id="zero_config" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Control</th>
                            <th>Name</th>
                            <th>Link</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-success mb-2" style="width:40px"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning mb-2" style="width:40px"> <i class="far fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger mb-2" style="width:40px"><i class="far fa-trash-alt"></i></a>
                                </td>
                                <td><img src="~/img/@blog.ImagePath" style="width:50px" /></td>
                                <td>@blog.Title</td>
                                <td>@blog.Link</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Control</th>
                            <th>Name</th>
                            <th>Link</th>
                            <th>Image</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
