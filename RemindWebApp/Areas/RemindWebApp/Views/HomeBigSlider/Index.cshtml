@model IEnumerable<HomeSliderBig> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/RemindWebApp/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">  <a asp-action="Create" class="btn btn-primary">Create</a> </h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>İdarəetmə</th>
                        <th>Şəkil</th>
                        <th>Başlıq</th>
                        <th>AltBaşlıq</th>
                        <th>Keçid</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var slider in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-success mb-2" style="width:40px"><i class="fas fa-eye"></i></a>
                                <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning mb-2" style="width:40px"> <i class="far fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger mb-2" style="width:40px"><i class="far fa-trash-alt"></i></a>
                            </td>
                            <td><img src="~/img/@slider.ImgPath" style="width:50px" /></td>
                            <td>@slider.Title</td>
                            <td>@slider.SubTitle</td>
                            <td>@slider.Link</td>
                        </tr>
                    }
                </tbody>
                
            </table>
        </div>

    </div>
</div>
