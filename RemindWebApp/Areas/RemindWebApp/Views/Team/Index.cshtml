@model IEnumerable<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/RemindWebApp/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">  <a asp-action="Create" class="btn btn-primary">Create</a> </h5>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">İdarəetmə</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Şəkil</th>
                            <th scope="col">Vəzifə</th>
                            <th scope="col">Haqqında</th>
                        </tr>
                    </thead>
                    <tbody> 
                        @{
                            int count = 1;
                        }
                        @foreach (var team in Model)
                        {
                        <tr>

                            <th scope="row">@count</th>
                            <td>
                                <a asp-action="Detail" asp-route-id="@team.Id" class="btn btn-success"><i class="fas fa-eye"></i></a>
                                <a asp-action="Update" asp-route-id="@team.Id" class="btn btn-warning"> <i class="far fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@team.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                            </td>
                            <td>@team.Name</td>
                            <td><img src="~/img/@team.ImagePath" alt="Alternate Text" style="width:100px" /></td>
                            <td>@team.Job</td>

                            @if (team.About.Length > 20)
                            {
                                <td>@(team.About.Substring(0, 20) + "...") </td>
                            }
                            else
                            {
                                <td> @team.About </td>
                            }



                        </tr>
                             count++;
                         }

                        </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
